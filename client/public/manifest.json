  "shortcuts": [
    {
      "name": "Start Studying",
      "short_name": "Study",
      "description": "Begin a study session with flash cards",
      "url": "/study",
      "icons": [
        {
          "src": "/icons/study-icon.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Take Quiz", 
      "short_name": "Quiz",
      "description": "Take a timed or practice quiz",
      "url": "/quiz",
      "icons": [
        {
          "src": "/icons/quiz-icon.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "View Progress",
      "short_name": "Progress", 
      "description": "Check your learning progress and achievements",
      "url": "/progress",
      "icons": [
        {
          "src": "/icons/progress-icon.png",
          "sizes": "192x192"
        }
      ]
